@model IEnumerable< Book_Store_App.Models.Domain.Author>
@{
     
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Author/Add"> Add More </a>

        </div>

    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Add Author</h3>
            <table class="table table-striped table-bordered table-dark">

                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.AuthorName</td>
                            <td>
                                <a class="btn btn-success" href="/Genre/Edit?id =@item.Id">Edit</a>

                                <a class="btn btn-danger" onclick="return window.confirm('Are You Sure?')" href ="/Genre/Delete?id =@item.Id">Delete</a>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
            

        </div>

    </div>
        
</div>

