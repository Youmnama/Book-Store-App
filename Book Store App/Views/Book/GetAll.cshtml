@model IEnumerable< Book_Store_App.Models.Domain.Book>
@{
     
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Genre/Add"> Add More </a>

        </div>

    </div>
    <div class="row">
        <div class="col-md-6">
            <h3> Book </h3>
            <table class="table table-striped table-bordered table-dark">

                <thead>
                    <tr>
                       <th>Title</th>
                        <th>Genre</th>
                        <th>Isbn</th>
                        <th>Total Pages</th>
                        <th>Author</th>
                        <th>Publisher</th>
                        <th>Action</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.GeneName</td>
                            <td>@item.Isbn</td>
                            <td>@item.TotalPages</td>
                            <td>@item.AuthorName</td>
                            <td>@item.PublisherName</td>
                        <td>
                                <a class="btn btn-success" href="/Book/update?id=@item.Id"><i class="bi bi-pen"></i></a> |
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Book/delete?id=@item.Id"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
            

        </div>

    </div>
        
</div>

